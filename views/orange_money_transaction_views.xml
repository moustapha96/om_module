<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_orange_money_transaction_form" model="ir.ui.view">
        <field name="name">orange.money.transaction.form</field>
        <field name="model">orange.money.transaction</field>
        <field name="arch" type="xml">
            <form string="Transaction Orange Money">
                <header>
                    <button name="action_check_status" type="object" string="Vérifier le statut"
                        class="btn-primary" icon="fa-check" />

                    <button name="action_download_invoice" type="object"
                        string="Télécharger la facture" class="btn-secondary"
                        attrs="{'invisible': [('facture_pdf', '=', False)]}" />

                    <button name="action_view_invoice_url" type="object" string="Voir la facture"
                        class="btn-secondary" attrs="{'invisible': [('url_facture', '=', False)]}" />

                    <button name="action_regenerate_invoice" type="object"
                        string="Régénérer la facture" class="btn-warning"
                        attrs="{'invisible': [('status', '!=', 'SUCCESS')]}" />

                    <field name="status" widget="statusbar"
                        statusbar_visible="INITIATED,PENDING,ACCEPTED,SUCCESS" />
                </header>
                <sheet>
                    <field name="order_id" invisible="1" />
                    <field name="has_qr_code" invisible="1" />
                    <field name="qr_code_base64" invisible="1" />
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_order" type="object" class="oe_stat_button"
                            icon="fa-shopping-cart"
                            attrs="{'invisible': [('order_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Voir</span>
                                <span class="o_stat_text">Commande</span>
                            </div>
                        </button>
                        <button name="action_view_partner" type="object" class="oe_stat_button"
                            icon="fa-user" attrs="{'invisible': [('partner_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Voir</span>
                                <span class="o_stat_text">Client</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" />
                        </h1>
                        <div class="o_row">
                            <field name="formatted_amount" class="oe_inline" />
                            <field name="status" widget="badge"
                                decoration-success="status == 'SUCCESS'"
                                decoration-info="status in ['INITIATED', 'PENDING', 'ACCEPTED']"
                                decoration-danger="status in ['FAILED', 'REJECTED']"
                                decoration-warning="status == 'CANCELLED'" />
                        </div>
                    </div>
                    <notebook>
                        <page string="Informations Générales" name="general">
                            <group>
                                <group string="Identifiants">
                                    <field name="transaction_id" />
                                    <!-- <field name="orange_id" /> -->
                                    <field name="qr_id" />
                                    <field name="transaction_type" />
                                    <!-- <field name="success_url" /> -->
                                    <!-- <field name="cancel_url" /> -->
                                    <!-- <field name="callback_url" /> -->
                                    <!-- <field name="pay_token" /> -->
                                    <!-- <field name="payment_url" /> -->

                                    <field name="customer_id" readonly="1" />
                                    <field name="customer_id_type" readonly="1" />
                                    <field name="partnerId" readonly="1" />
                                    <field name="partnerId_type" readonly="1" />
                                    <field name="transactionId" />

                                </group>
                                <group string="Montant">
                                    <field name="amount" />
                                    <field name="currency" readonly="1" />
                                    <field name="formatted_amount" />
                                </group>
                            </group>
                            <group>
                                <group string="Client">
                                    <field name="partner_id" />
                                    <field name="customer_msisdn" />
                                </group>
                                <group string="Marchand">
                                    <field name="merchant_code" />
                                    <field name="channel" />
                                    <field name="payment_method" />
                                </group>
                            </group>
                            <group string="Description">
                                <field name="description" />
                            </group>
                        </page>
                        <page string="QR Code Liens" name="qr_code"
                            attrs="{'invisible': [('has_qr_code', '=', False)]}">
                            <group>
                                <group string="QR Code">
                                    <field name="qr_code_url" />
                                </group>
                                <group string="Deep Links">
                                    <field name="deep_link" />
                                    <field name="deep_link_om" />
                                    <field name="deep_link_maxit" />
                                </group>
                            </group>
                            <group string="Validité">
                                <field name="validity_seconds" />
                                <!-- <field name="valid_from" /> -->
                                <!-- <field name="valid_until" /> -->
                            </group>
                            <group string="QR Code Base64"
                                attrs="{'invisible': [('qr_code_base64', '=', False)]}">
                                <field name="qr_code_base64" widget="text" />
                            </group>
                        </page>
                        <page string="Statut Suivi" name="status">
                            <group>
                                <group string="Statut">
                                    <field name="status" />
                                    <!-- <field name="status_reason" /> -->
                                    <!-- <field name="status_color" invisible="1" /> -->
                                </group>
                                <group string="Dates">
                                    <field name="created_at" />
                                    <field name="updated_at" />
                                    <field name="completed_at" />
                                </group>
                            </group>
                        </page>
                        <page string="Facture" name="invoice"
                            attrs="{'invisible': [('status', '!=', 'SUCCESS')]}">
                            <group>
                                <group string="Informations Facture">
                                    <field name="url_facture" widget="url" />
                                    <field name="facture_filename" />
                                    <!-- <field name="facture_generated_at" /> -->
                                    <!-- <field name="facture_size" /> -->
                                    <field name="facture_pdf" filename="facture_filename"
                                        attrs="{'invisible': [('facture_pdf', '=', False)]}" />
                                </group>
                            </group>
                        </page>
                        <page string="Données Techniques" name="technical">
                            <group string="Métadonnées">
                                <field name="metadata" widget="text" />
                            </group>
                            <group string="Réponse Orange Money">
                                <field name="orange_response" widget="text" />
                            </group>
                            <group string="Données Webhook">
                                <field name="webhook_data" widget="text" />
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste pour les transactions Orange Money -->
    <record id="view_orange_money_transaction_tree" model="ir.ui.view">
        <field name="name">orange.money.transaction.tree</field>
        <field name="model">orange.money.transaction</field>
        <field name="arch" type="xml">
            <tree string="Transactions Orange Money" decoration-success="status == 'SUCCESS'"
                decoration-info="status in ['INITIATED', 'PENDING', 'ACCEPTED']"
                decoration-danger="status in ['FAILED', 'REJECTED']"
                decoration-warning="status == 'CANCELLED'">
                <field name="reference" />
                <field name="transaction_id" />
                <field name="partner_id" />
                <field name="formatted_amount" />
                <field name="status" widget="badge" />
                <field name="transaction_type" />
                <field name="payment_method" />
                <field name="created_at" />
                <field name="completed_at" />
                <field name="order_id" />
            </tree>
        </field>
    </record>

    <!-- Vue kanban pour les transactions Orange Money -->
    <record id="view_orange_money_transaction_kanban" model="ir.ui.view">
        <field name="name">orange.money.transaction.kanban</field>
        <field name="model">orange.money.transaction</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="status" />
                <field name="status_color" />
                <field name="formatted_amount" />
                <field name="partner_id" />
                <field name="created_at" />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="oe_kanban_color_#{kanban_getcolor(record.status_color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button"
                                    data-toggle="dropdown" href="#" aria-label="Dropdown menu"
                                    title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v" />
                                </a>
                                <div class="dropdown-menu" role="menu">

                                    <a name="action_check_status" type="object"
                                        class="dropdown-item">Vérifier
                                        le statut</a>

                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="reference" />
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="transaction_id" />
                                </div>
                                <div class="oe_kanban_bottom_left">
                                    <field name="partner_id" />
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <strong>
                                        <field name="formatted_amount" />
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche pour les transactions Orange Money -->
    <record id="view_orange_money_transaction_search" model="ir.ui.view">
        <field name="name">orange.money.transaction.search</field>
        <field name="model">orange.money.transaction</field>
        <field name="arch" type="xml">
            <search string="Rechercher Transactions Orange Money">
                <field name="reference" />
                <field name="transaction_id" />
                <field name="partner_id" />
                <field name="order_id" />
                <field name="customer_msisdn" />
                <field name="qr_code_url" />
                <field name="deep_link" />
                <filter string="Succès" name="success" domain="[('status', '=', 'SUCCESS')]" />
                <filter string="En cours" name="pending"
                    domain="[('status', 'in', ['INITIATED', 'PENDING', 'ACCEPTED'])]" />
                <filter string="Échouées" name="failed"
                    domain="[('status', 'in', ['FAILED', 'REJECTED', 'CANCELLED'])]" />
                <filter string="Aujourd'hui" name="today"
                    domain="[('created_at', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]" />
                <filter string="Cette semaine" name="this_week"
                    domain="[('created_at', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]" />
                <separator />
                <filter string="Avec QR Code URL" name="with_qr_url"
                    domain="[('qr_code_url', '!=', False)]" />
                <filter string="Avec Deep Link" name="with_deep_link"
                    domain="[('deep_link', '!=', False)]" />
                <filter string="Avec QR Code Base64" name="with_qr_base64"
                    domain="[('qr_code_base64', '!=', False)]" />
                <group expand="0" string="Grouper par">
                    <filter string="Statut" name="group_status" context="{'group_by': 'status'}" />
                    <filter string="Client" name="group_partner"
                        context="{'group_by': 'partner_id'}" />
                    <filter string="Type" name="group_type"
                        context="{'group_by': 'transaction_type'}" />
                    <filter string="Méthode de paiement" name="group_payment_method"
                        context="{'group_by': 'payment_method'}" />
                    <filter string="Date de création" name="group_date"
                        context="{'group_by': 'created_at:day'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les transactions Orange Money -->
    <record id="action_orange_money_transaction" model="ir.actions.act_window">
        <field name="name">Transactions</field>
        <field name="res_model">orange.money.transaction</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune transaction Orange Money trouvée
            </p>
            <p>
                Les transactions Orange Money apparaîtront ici une fois que vous aurez initié des
                paiements.
            </p>
        </field>
    </record>

    <!-- Menu pour les transactions Orange Money -->
    <menuitem id="menu_orange_money_transaction" name="Transactions" parent="menu_orange_money_root"
        action="action_orange_money_transaction" />
</odoo>